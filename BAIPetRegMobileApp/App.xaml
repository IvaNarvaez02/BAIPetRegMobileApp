<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BAIPetRegMobileApp"
             x:Class="BAIPetRegMobileApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Resource dictionaries for colors and other styles -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Font Style -->
            <Style TargetType="Label">
                <Setter Property="FontFamily">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="x:String">
                            <On Platform="Android, iOS" Value="Poppins-Regular.ttf#Poppins-Regular"/>
                            <!-- Replace with your actual font file and font family name -->
                        </OnPlatform>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="Button">
                <Setter Property="FontFamily">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="x:String">
                            <On Platform="Android, iOS" Value="Poppins-Regular.ttf#Poppins-Regular"/>
                            <!-- Replace with your actual font file and font family name -->
                        </OnPlatform>
                    </Setter.Value>
                </Setter>
            </Style>
            <!-- Add more styles for other text-based controls if needed -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
