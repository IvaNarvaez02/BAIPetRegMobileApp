<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BAIPetRegMobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BAIPetRegMobileApp"
    xmlns:dashboard="clr-namespace:BAIPetRegMobileApp.Views.Dashboard"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="BAIPetRegMobileApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <FlyoutItem>
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate dashboard:DashboardPage}"
            Route="Dashboard" />
    </FlyoutItem>
</Shell>
