<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BAIPetRegMobileApp.HomePage"
             Shell.FlyoutBehavior="Flyout"
             FlyoutItem.IsVisible="False"
             Shell.BackgroundColor="#57C84D"
             Shell.NavBarIsVisible="True"       
        
             >
    <!-- Define Flyout Header -->
  
    <!--nav bar design-->
    
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <Shell.TitleView>
        <HorizontalStackLayout VerticalOptions="Fill">
            <Button x:Name="MenuBtnClicked"
            FontFamily="MaterialIconsOutlined-Regular"
            Text="menu"
            BackgroundColor="Transparent"
            FontSize="30"
            Clicked="MenuBtnClicked_Clicked"/>
            <Label/>
        </HorizontalStackLayout>
    </Shell.TitleView>


    <ScrollView>
        <VerticalStackLayout Spacing="2">
            <Image
    Source="bai_banner.jpg"
    VerticalOptions="Center"
     HorizontalOptions="Center"/>

            <!--<Frame
        BackgroundColor="White"
        CornerRadius="20"
        Padding="0"
        HeightRequest="50"
        Margin="23,30,23,0">
                <SearchBar
            Placeholder="Search"
            BackgroundColor="Transparent"
            VerticalOptions="Center"
            Margin="10,0"/>
            </Frame>-->


            <Label
        Text="Welcome!"
        TextColor="#096B00"
        FontAttributes="Bold"
        FontSize="33"
        Margin="0,20,0,0"
        Style="{StaticResource Headline}"
        SemanticProperties.HeadingLevel="Level1"/>

            <Image
        Source="bai_logo.png"
        Opacity="0.5"
        WidthRequest="300"
        HeightRequest="300"
        Margin="0,30,0,0"
        Aspect="AspectFit"
        VerticalOptions="Center"
        HorizontalOptions="Center"/>


            <Button x:Name="BtnRegisterPet"
            FontSize="20"
            Text="Register a Pet"
            FontAttributes="Bold"
            Padding="20"
            Margin="10"
            BackgroundColor="#096B00"
            Clicked="BtnRegisterPet_Clicked"
            CornerRadius="10"
            />




        </VerticalStackLayout>

    </ScrollView>

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#7EE175" Offset="0.0" />
            <GradientStop Color="#ffffff" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    
</ContentPage>
