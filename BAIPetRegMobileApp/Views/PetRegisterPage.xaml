<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BAIPetRegMobileApp.Views.PetRegisterPage"
             Title="PetRegisterPage">

    <ScrollView>
        <VerticalStackLayout>
            <Label  Text="Pet Registration" 
            HorizontalOptions="Center"
            TextColor="#096B00"
            FontSize="30"
            FontAttributes="Bold"
            Margin="0,30,0,0"
            FontFamily="Poppins-Bold"/>
            <Label  Text="Animal Information" 
            HorizontalOptions="Start"
            TextColor="#096B00"
            FontSize="20"
            FontAttributes="Bold"
            Margin="40,50,0,0"
            FontFamily="Poppins-Bold"/>

            <!--Pet's Name Entry-->

            <StackLayout>
                <Label Text="Pet's Name"
               Margin="40,20,0,0"
               TextColor="Black"
               FontSize="20"
               FontAttributes="Bold"
               >

                </Label>
                <Frame CornerRadius="15"
            Padding="10"
            BackgroundColor="#f1f1f1"
            BorderColor="Transparent"
            HasShadow="False"
            Margin="30,10"
            HorizontalOptions="FillAndExpand">
                    <Entry
                     x:Name="EntryPetName"   
            Placeholder="Pet's Name"
            PlaceholderColor="Black"
            BackgroundColor="Transparent"
            IsTextPredictionEnabled="False"
            IsSpellCheckEnabled="False"
            FontAttributes="None"
            VerticalOptions="Center"
            HorizontalOptions="FillAndExpand"
            FontSize="20"/>
                </Frame>

            </StackLayout>

            <!--Type OwnerShip Picker-->

            <StackLayout>
                <Label Text="Type of Ownership"
                       Margin="40,20,0,0"
                       TextColor="Black"
                       FontSize="20"
                       FontAttributes="Bold"
        />
                <Frame CornerRadius="15"
                        Padding="10"
                        BackgroundColor="#f1f1f1"
                        BorderColor="Transparent"
                        HasShadow="False"
                        Margin="30,10"
                        HorizontalOptions="FillAndExpand">
                    <Picker Title="Type of Ownership"
                            x:Name="PickerTypeOfOwnership"
                            Style="{StaticResource NoUnderlinePicker}" 
                                    TitleColor="Black"
                                    FontSize="20"
             >
                        <!-- Add Picker items here -->
                        <Picker.Items  BackgroundColor="Transparent">
                            <x:String>Ownership 1</x:String>
                            <x:String>Ownership 2</x:String>
                            <x:String>Ownership 3</x:String>
                        </Picker.Items>
                    </Picker>
                </Frame>
            </StackLayout>

            <!--Species Picker-->

            <StackLayout>
                <Label Text="Species"
                       FontAttributes="Bold"
               Margin="40,20,0,0"
               TextColor="Black"
               FontSize="20"
               />
                <Frame CornerRadius="15"
            Padding="10"
            BackgroundColor="#f1f1f1"
            BorderColor="Transparent"
            HasShadow="False"
            Margin="30,10"
            HorizontalOptions="FillAndExpand">
                    <Picker Title="Select Species" Style="{StaticResource NoUnderlinePicker}" 
                    TitleColor="Black"
                    FontSize="20"
                    >
                        <!-- Add Picker items here -->
                        <Picker.Items  BackgroundColor="Transparent">
                            <x:String>Species 1</x:String>
                            <x:String>Species 2</x:String>
                            <x:String>Species 3</x:String>
                        </Picker.Items>
                    </Picker>
                </Frame>
            </StackLayout>

            <!--Breed Picker-->

            <StackLayout>
                <Label Text="Breed"
                       FontAttributes="Bold"
                        Margin="40,20,0,0"
                        TextColor="Black"
                        FontSize="20"
       />
                <Frame CornerRadius="15"
                        Padding="10"
                        BackgroundColor="#f1f1f1"
                        BorderColor="Transparent"
                        HasShadow="False"
                        Margin="30,10"
                        HorizontalOptions="FillAndExpand">
                    <Picker Title="Select Breed" Style="{StaticResource NoUnderlinePicker}" 
                            TitleColor="Black"
                            FontSize="20"
            >
                        <!-- Add Picker items here -->
                        <Picker.Items  BackgroundColor="Transparent">
                            <x:String>Breed 1</x:String>
                            <x:String>Breed 2</x:String>
                            <x:String>Breed 3</x:String>
                        </Picker.Items>
                    </Picker>
                </Frame>
            </StackLayout>

            <!--Date Picker-->
            <StackLayout>
                <Label Text="Date of Birth"
                       FontAttributes="Bold"
                       Margin="40,20,0,0"
                       TextColor="Black"
                       FontSize="20"/>
                <Frame CornerRadius="15"
                       Padding="10"
                       BackgroundColor="#f1f1f1"
                       BorderColor="Transparent"
                       HasShadow="False"
                       Margin="30,10"
                       HorizontalOptions="FillAndExpand">
                    <DatePicker Date="{Binding BirthDate}"
                                Format="D"
                                FontSize="20"/>
                </Frame>
            </StackLayout>


            <!--Sex Picker-->

            <StackLayout>
                <Label Text="Sex"
                       FontAttributes="Bold"
                 Margin="40,20,0,0"
                 TextColor="Black"
                 FontSize="20"
/>
                <Frame CornerRadius="15"
                 Padding="10"
                 BackgroundColor="#f1f1f1"
                 BorderColor="Transparent"
                 HasShadow="False"
                 Margin="30,10"
                 HorizontalOptions="FillAndExpand">
                    <Picker Title="Select Sex" Style="{StaticResource NoUnderlinePicker}" 
                     TitleColor="Black"
                     FontSize="20"
                     >
                        <!-- Add Picker items here -->
                        <Picker.Items  BackgroundColor="Transparent"    

                                      >
                            <x:String>Male</x:String>
                            <x:String>Female</x:String>
                            <x:String>3 times a day</x:String>
                        </Picker.Items>
                    </Picker>
                </Frame>
            </StackLayout>

            <!--Age Entry-->

            <StackLayout>
                <Label Text="Age"
                       FontAttributes="Bold"
                       Margin="40,20,0,0"
                       TextColor="Black"
                       FontSize="20"
   >

                </Label>
                <Frame CornerRadius="15"
                       Padding="10"
                       BackgroundColor="#f1f1f1"
                       BorderColor="Transparent"
                       HasShadow="False"
                       Margin="30,10"
                       HorizontalOptions="FillAndExpand">
                       <Entry
                       Placeholder="Age"
                       PlaceholderColor="Black"
                       BackgroundColor="Transparent"
                       IsTextPredictionEnabled="False"
                       IsSpellCheckEnabled="False"
                       FontAttributes="None"
                       VerticalOptions="Center"
                       HorizontalOptions="FillAndExpand"
                       FontSize="20"
                       Keyboard="Numeric"
                       MaxLength="2"    
                       />
                </Frame>

            </StackLayout>

            <!--Weight Entry-->

            <StackLayout>
                <Label Text="Weight(KG)"
                       FontAttributes="Bold"
                    Margin="40,20,0,0"
                    TextColor="Black"
                    FontSize="20"
>

                </Label>
                <Frame CornerRadius="15"
                    Padding="10"
                    BackgroundColor="#f1f1f1"
                    BorderColor="Transparent"
                    HasShadow="False"
                    Margin="30,10"
                    HorizontalOptions="FillAndExpand">
                    <Entry
                    Placeholder="Input Weight(KG)"
                    PlaceholderColor="Black"
                    BackgroundColor="Transparent"
                    IsTextPredictionEnabled="False"
                    IsSpellCheckEnabled="False"
                    FontAttributes="None"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    FontSize="20"
                    Keyboard="Numeric"
                    MaxLength="5"   
                    />
                </Frame>
            </StackLayout>

            <!--Animal Color Entry-->

            <StackLayout>
                <Label Text="Animal Color"
                    Margin="40,20,0,0"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
>

                </Label>
                <Frame CornerRadius="15"
                    Padding="10"
                    BackgroundColor="#f1f1f1"
                    BorderColor="Transparent"
                    HasShadow="False"
                    Margin="30,10"
                    HorizontalOptions="FillAndExpand">
                    <Entry
                    Placeholder="Input Animal Color"
                    PlaceholderColor="Black"
                    BackgroundColor="Transparent"
                    IsTextPredictionEnabled="False"
                    IsSpellCheckEnabled="False"
                    FontAttributes="None"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    FontSize="20"
                    Keyboard="Text"  
                    />
                </Frame>
            </StackLayout>

            <!--Tag number Entry-->

            <StackLayout>
                <Label Text="Tag Number (Optional)"
                    Margin="40,20,0,0"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
>

                </Label>
                
                <Frame CornerRadius="15"
                    Padding="10"
                    BackgroundColor="#f1f1f1"
                    BorderColor="Transparent"
                    HasShadow="False"
                    Margin="30,10"
                    HorizontalOptions="FillAndExpand">
                    <Entry
                    x:Name="EntryTagNumber"
                    Placeholder="Micro-chip number"
                    PlaceholderColor="Black"
                    BackgroundColor="Transparent"
                    IsTextPredictionEnabled="False"
                    IsSpellCheckEnabled="False"
                    FontAttributes="None"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    FontSize="20"
                    Keyboard="Numeric"   
                    />
                </Frame>
            </StackLayout>
            
            

            <Label  Text="Animal location" 
                    HorizontalOptions="Start"
                    TextColor="#096B00"
                    FontSize="20"
                    FontAttributes="Bold"
                    Margin="40,50,0,0"
                    FontFamily="Poppins-Bold"/>
            
            
            
            
            <!--region picker-->

            <StackLayout>
                <Label Text="Region"
                       FontAttributes="Bold"
                 Margin="40,20,0,0"
                 TextColor="Black"
                 FontSize="20"
/>
                <Frame CornerRadius="15"
                 Padding="10"
                 BackgroundColor="#f1f1f1"
                 BorderColor="Transparent"
                 HasShadow="False"
                 Margin="30,10"
                 HorizontalOptions="FillAndExpand">
                    <Picker Title="Select Region" Style="{StaticResource NoUnderlinePicker}" 
                     TitleColor="Black"
                     FontSize="20"
                     >
                        <!-- Add Picker items here -->
                        <Picker.Items  BackgroundColor="Transparent"    

                                      >
                            <x:String>Region 1</x:String>
                            <x:String>Region 2</x:String>
                            <x:String>Region 3</x:String>
                        </Picker.Items>
                    </Picker>
                </Frame>
            </StackLayout>


            <!--Province picker-->

            <StackLayout>
                <Label Text="Province"
                       FontAttributes="Bold"
                 Margin="40,20,0,0"
                 TextColor="Black"
                 FontSize="20"
/>
                <Frame CornerRadius="15"
                 Padding="10"
                 BackgroundColor="#f1f1f1"
                 BorderColor="Transparent"
                 HasShadow="False"
                 Margin="30,10"
                 HorizontalOptions="FillAndExpand">
                    <Picker Title="Select Province" Style="{StaticResource NoUnderlinePicker}" 
                     TitleColor="Black"
                     FontSize="20"
                     >
                        <!-- Add Picker items here -->
                        <Picker.Items  BackgroundColor="Transparent"    

                                      >
                            <x:String>Province 1</x:String>
                            <x:String>Province 2</x:String>
                            <x:String>Province 3</x:String>
                        </Picker.Items>
                    </Picker>
                </Frame>
            </StackLayout>

            <!--Municipality picker-->

            <StackLayout>
                <Label Text="Municipality"
                       FontAttributes="Bold"
                 Margin="40,20,0,0"
                 TextColor="Black"
                 FontSize="20"
/>
                <Frame CornerRadius="15"
                 Padding="10"
                 BackgroundColor="#f1f1f1"
                 BorderColor="Transparent"
                 HasShadow="False"
                 Margin="30,10"
                 HorizontalOptions="FillAndExpand">
                    <Picker Title="Select Municipality" Style="{StaticResource NoUnderlinePicker}" 
                     TitleColor="Black"
                     FontSize="20"
                     >
                        <!-- Add Picker items here -->
                        <Picker.Items  BackgroundColor="Transparent"    

                                      >
                            <x:String>Municipality 1</x:String>
                            <x:String>Municipality 2</x:String>
                            <x:String>Municipality 3</x:String>
                        </Picker.Items>
                    </Picker>
                </Frame>
            </StackLayout>

            <!--Barangay picker-->

            <StackLayout>
                <Label Text="Barangay"
                       FontAttributes="Bold"
                 Margin="40,20,0,0"
                 TextColor="Black"
                 FontSize="20"
/>
                <Frame CornerRadius="15"
                 Padding="10"
                 BackgroundColor="#f1f1f1"
                 BorderColor="Transparent"
                 HasShadow="False"
                 Margin="30,10"
                 HorizontalOptions="FillAndExpand">
                    <Picker Title="Select Barangay" Style="{StaticResource NoUnderlinePicker}" 
                     TitleColor="Black"
                     FontSize="20"
                     >
                        <!-- Add Picker items here -->
                        <Picker.Items  BackgroundColor="Transparent"    

                                      >
                            <x:String>Barangay  1</x:String>
                            <x:String>Barangay 2</x:String>
                            <x:String>Barangay 3</x:String>
                        </Picker.Items>
                    </Picker>
                </Frame>
            </StackLayout>

            <!--Longitude Entry-->

            <StackLayout>
                <Label Text="Longitude"
                    Margin="40,20,0,0"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
>

                </Label>

                <Frame
                    CornerRadius="15"
                    Padding="10"
                    BackgroundColor="#f1f1f1"
                    BorderColor="Transparent"
                    HasShadow="False"
                    Margin="30,10"
                    HorizontalOptions="FillAndExpand">
                    <Entry
                    Placeholder="Longitude"
                    PlaceholderColor="Black"
                    BackgroundColor="Transparent"
                    IsTextPredictionEnabled="False"
                    IsSpellCheckEnabled="False"
                    FontAttributes="None"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    FontSize="20"
                    Keyboard="Numeric"   
                    />
                </Frame>
            </StackLayout>

            <!--Latitude Entry-->

            <StackLayout>
                <Label Text="Latitude"
                    Margin="40,20,0,0"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
>

                </Label>

                <Frame
                    CornerRadius="15"
                    Padding="10"
                    BackgroundColor="#f1f1f1"
                    BorderColor="Transparent"
                    HasShadow="False"
                    Margin="30,10"
                    HorizontalOptions="FillAndExpand">
                    <Entry
                    Placeholder="Latitude"
                    PlaceholderColor="Black"
                    BackgroundColor="Transparent"
                    IsTextPredictionEnabled="False"
                    IsSpellCheckEnabled="False"
                    FontAttributes="None"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    FontSize="20"
                    Keyboard="Numeric"   
                    />
                </Frame>
            </StackLayout>

            <Label  Text="Owner location" 
                    HorizontalOptions="Start"
                    TextColor="#096B00"
                    FontSize="20"
                    FontAttributes="Bold"
                    Margin="40,50,0,0"
                    FontFamily="Poppins-Bold"/>

            <!--FullName Entry-->

            <StackLayout>
                <Label Text="Fullname"
                    Margin="40,20,0,0"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
>

                </Label>

                <Frame
                    CornerRadius="15"
                    Padding="10"
                    BackgroundColor="#f1f1f1"
                    BorderColor="Transparent"
                    HasShadow="False"
                    Margin="30,10"
                    HorizontalOptions="FillAndExpand">
                    <Entry
                    Placeholder="Firstname,Middlename,lastname"
                    PlaceholderColor="Black"
                    BackgroundColor="Transparent"
                    IsTextPredictionEnabled="False"
                    IsSpellCheckEnabled="False"
                    FontAttributes="None"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    FontSize="20"
                    Keyboard="Text"   
                    />
                </Frame>
            </StackLayout>

            <!--Sex Picker-->

            <StackLayout>
                <Label Text="Sex"
                       FontAttributes="Bold"
                 Margin="40,20,0,0"
                 TextColor="Black"
                 FontSize="20"
/>
                <Frame CornerRadius="15"
                 Padding="10"
                 BackgroundColor="#f1f1f1"
                 BorderColor="Transparent"
                 HasShadow="False"
                 Margin="30,10"
                 HorizontalOptions="FillAndExpand">
                    <Picker Title="Select Sex" Style="{StaticResource NoUnderlinePicker}" 
                     TitleColor="Black"
                     FontSize="20"
                     >
                        <!-- Add Picker items here -->
                        <Picker.Items  BackgroundColor="Transparent"    

                                      >
                            <x:String>Male</x:String>
                            <x:String>Female</x:String>
                            <x:String>3 times a day</x:String>
                        </Picker.Items>
                    </Picker>
                </Frame>
            </StackLayout>

            <!--Contact Number Entry-->

            <StackLayout>
                <Label Text="Contact Number"
                    Margin="40,20,0,0"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
>

                </Label>

                <Frame
                    CornerRadius="15"
                    Padding="10"
                    BackgroundColor="#f1f1f1"
                    BorderColor="Transparent"
                    HasShadow="False"
                    Margin="30,10"
                    HorizontalOptions="FillAndExpand">
                    <Entry
                    Placeholder="Phone or Mobile Number"
                    PlaceholderColor="Black"
                    BackgroundColor="Transparent"
                    IsTextPredictionEnabled="False"
                    IsSpellCheckEnabled="False"
                    FontAttributes="None"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    FontSize="20"
                    Keyboard="Numeric"   
                    />
                </Frame>
            </StackLayout>

            <!--Email Address Entry-->

            <StackLayout>
                <Label Text="Email Address"
                    Margin="40,20,0,0"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold"
>

                </Label>

                <Frame
                    CornerRadius="15"
                    Padding="10"
                    BackgroundColor="#f1f1f1"
                    BorderColor="Transparent"
                    HasShadow="False"
                    Margin="30,10"
                    HorizontalOptions="FillAndExpand">
                    <Entry
                    Placeholder="Please Enter a valid email"
                    PlaceholderColor="Black"
                    BackgroundColor="Transparent"
                    IsTextPredictionEnabled="False"
                    IsSpellCheckEnabled="False"
                    FontAttributes="None"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    FontSize="20"
                    Keyboard="Email"   
                    />
                </Frame>
            </StackLayout>

            <!--Complete address Entry-->

            <StackLayout>
                <Label Text="Complete Address"
                       Margin="40,20,0,0"
                       TextColor="Black"
                       FontAttributes="Bold"
                       FontSize="20">
                </Label>
                <Frame
                        CornerRadius="15"
                        Padding="10"
                        BackgroundColor="#f1f1f1"
                        BorderColor="Transparent"
                        HasShadow="False"
                        Margin="30,10"
                        HorizontalOptions="FillAndExpand">
                    <Editor
                            Placeholder="Lot/House/Bldg.,Street, Barangay,City/Municipality, Province"
                            PlaceholderColor="Gray"
                            BackgroundColor="Transparent"
                            IsTextPredictionEnabled="False"
                            IsSpellCheckEnabled="False"
                            FontAttributes="None"
                            VerticalOptions="StartAndExpand"
                            HorizontalOptions="FillAndExpand"
                            FontSize="20"
                            Keyboard="Text"
                            MaxLength="200"
                            HeightRequest="100"
                        />
                    </Frame>
            </StackLayout>

            <!--Button for Submit-->

            <Button x:Name="BtnSubmit"
                    FontSize="20"
                    Text="SUBMIT"
                    FontAttributes="Bold"
                    Padding="20"
                    Margin="60"
                    BackgroundColor="#096B00"
                    CornerRadius="10"
                    Clicked="BtnSubmit_Clicked" 
                     />
         
        </VerticalStackLayout>
    </ScrollView>

    <ContentPage.Resources>
        <Style x:Key="NoUnderlinePicker" TargetType="Picker">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </ContentPage.Resources>


</ContentPage>